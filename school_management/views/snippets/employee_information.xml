<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="employees_information" name="Employee Information Dynamic">
        <section class="employees-information">
            <div class="container">
                <div class="text-center py-5">
                    <h2 class="h1">Employees Information</h2>
                    <p>This is a Employees Information Snippet.</p>
                </div>


                <div class="row justify-content-center" id="employees-information-row"/>
            </div>
        </section>
    </template>



    <template id="employees_information_options" inherit_id="website.snippet_options">
        <xpath expr="//div[@data-js='Box']" position="before">
            <div data-js="ExploreEmployeeInformation" data-selector=".employees-information" data-drop-in=".o_mega_menu nav">
            </div>
        </xpath>
    </template>

</odoo>